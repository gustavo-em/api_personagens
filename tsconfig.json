
  
{
    "compilerOptions": {
  
      "moduleResolution": "node",
  
      "target": "es6",                                  
      "lib": ["es5", "es6", "dom"],                                       
      "experimentalDecorators": true,                   
      "emitDecoratorMetadata": true,                    
      
      "module": "commonjs",                                
      
      "allowJs": true,                                  
      "strict": false,
      "outDir": "./dist",                              
      "rootDir": "./src",                              
      "removeComments": true,      
                           
      "sourceMap": true,
  
      "esModuleInterop": true,                             
      "forceConsistentCasingInFileNames": true,            
      
      "strictPropertyInitialization": false,             
      
      "skipLibCheck": true  ,
 

                                  
    }
  }